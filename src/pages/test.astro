    <div class="mx-auto text-white w-full max-w-5xl py-16 md:py-20 md:pb-10 border-b">
  
      <!-- Contents -->
      <div class="grid grid-cols-3 sm:grid-cols-3 lg:grid-cols-3 gap-8 sm:gap-10">
        
        <!-- Content 1 -->
        <div class="bg-white rounded-md text-black p-4">
          <div class="flex justify-center font-bold name text-primary mb-1">

      >
        <div class="lg:pr-4">
          <div class="lg:max-w-lg">
            <p class="text-base/7 font-semibold text-dark dark:text-secondary">
            </p>
            <h1
              class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-dark dark:text-secondary sm:text-5xl name"
            >
              Über Uns
            </h1>
            <p class="mt-6 text-xl/8 text-gray-700 dark:text-gray-400"></p>
          </div>
        </div>
      </div>
      <div
        class="hidden md:grid -ml-12 -mt-12 p-12 lg:sticky lg:top-4 lg:col-start-2 lg:row-span-2 lg:row-start-1 lg:overflow-hidden"
      >
        <Picture
          src={side_dark}
          alt="autos"
          format="webp"
          quality="max"
          width={1500}
          class="hidden dark:flex max-w-none rounded-xl bg-gray-900 shadow-xl ring-1 ring-gray-400/10 sm:w-[42rem]"
        />
        <Picture
          src={side_light}
          alt="autos"
          format="webp"
          quality="max"
          width={1500}
          class="dark:hidden md:flex max-w-none rounded-xl bg-gray-900 shadow-xl ring-1 ring-gray-400/10 sm:w-[42rem]"
        />
      </div>
      <div
        class="lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:mx-auto lg:grid lg:w-full lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8"
